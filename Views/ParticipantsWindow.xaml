<Window x:Class="Views.ParticipantsWindow" Title="ParticipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:SpinTheWheel"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SpinTheWheel.Views"
        Width="800"
        Height="750"
        DataContext="{Binding ParticipantsViewModel, Source={StaticResource ViewModelLocator}}"
        mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <!--  Header  -->
        <views:HeaderControl>
            <TextBlock FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="Hello, World!" />
        </views:HeaderControl>
        <!--  Body  -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  Filter Section  -->
            <StackPanel Grid.Row="0"
                        Margin="0,0,0,10"
                        Orientation="Horizontal">
                <TextBox Width="300"
                         VerticalAlignment="Center"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Width="100"
                        Height="40"
                        Margin="10,0,0,0"
                        Command="{Binding ApplyFilterCommand}"
                        Content="Apply Filter"
                        Style="{StaticResource PrimaryButtonStyle}" />
            </StackPanel>

            <!--  List of Participants  -->
            <ListBox Grid.Row="1"
                     HorizontalContentAlignment="Stretch"
                     d:ItemsSource="{d:SampleData ItemCount=5}"
                     ItemsSource="{Binding PagedParticipants}"
                     SelectedItem="{Binding SelectedParticipant}"
                     Style="{StaticResource ListBoxStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Participant Name  -->
                            <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />

                            <!--  Toggle Done  -->
                            <CheckBox Grid.Column="1"
                                      VerticalAlignment="Center"
                                      IsChecked="{Binding Done, Mode=TwoWay}"
                                      Style="{StaticResource CheckBoxStyle}" />

                            <!--  Delete Action  -->
                            <Button Grid.Column="2"
                                    Width="25"
                                    Height="25"
                                    Margin="5,0,0,0"
                                    Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Delete">
                                <Image Source="pack://application:,,,/Assets/delete_icon.png" Stretch="Uniform" />
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!--  Pagination Controls  -->
            <StackPanel Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding PageNumbers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="{Binding}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
        <!--  Footer  -->
        <views:FooterControl>
            <TextBlock FontSize="16"
                       FontWeight="Bold"
                       Foreground="White"
                       Text="Hello, World!" />
        </views:FooterControl>
    </StackPanel>
</Window>
