<Window x:Class="ParticipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpinTheWheel"
        mc:Ignorable="d"
        Title="ParticipantsWindow" Height="450" Width="800"
        DataContext="{Binding ParticipantsViewModel, Source={StaticResource ViewModelLocator}}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Buttons for CRUD Operations -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Add" Width="75" Margin="0,0,5,0" Command="{Binding AddCommand}" />
            <Button Content="Delete" Width="75" Margin="0,0,5,0" Command="{Binding DeleteCommand}" 
                    IsEnabled="{Binding SelectedParticipant, Converter={StaticResource InverseBooleanConverter}}" />
            <Button Content="Save" Width="75" Command="{Binding SaveCommand}" />
        </StackPanel>

        <!-- List of Participants -->
        <ListBox Grid.Row="1" ItemsSource="{Binding Participants}" SelectedItem="{Binding SelectedParticipant}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Width="200" />
                        <CheckBox IsChecked="{Binding Done, Mode=TwoWay}" VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
