<Window x:Class="Views.ParticipantsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:SpinTheWheel"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SpinTheWheel.Views"
        Title="ParticipantsWindow"
        Width="800"
        Height="750"
        DataContext="{Binding ParticipantsViewModel, Source={StaticResource ViewModelLocator}}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Header  -->
        <views:HeaderControl Grid.Row="0">
            <views:HeaderControl.HeaderContent>
                <StackPanel Margin="10"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <Label Margin="0,0,5,0"
                           Content="Gestionnaire des Participants."
                           Foreground="White"
                           Style="{StaticResource PrimaryTitleLabel}" />
                    <Label Margin="0,0,0,5"
                           Content="{Binding Participants.Count}"
                           ContentStringFormat="Total de {0} participants"
                           Foreground="White"
                           Style="{StaticResource SecondaryTitleLabel}" />
                </StackPanel>
            </views:HeaderControl.HeaderContent>
        </views:HeaderControl>
        <!--  Content  -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!--  Filter Section  -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <TextBox Width="300"
                         VerticalAlignment="Center"
                         Style="{StaticResource TextBoxStyle}"
                         Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
                <Button Width="150"
                        Height="40"
                        Command="{Binding ApplyFilterCommand}"
                        Content="Appliquer le filtre"
                        Style="{StaticResource SecondaryButtonStyle}" />
            </StackPanel>
            <!--  List of Participants  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <d:Label Content="This is a Body Label." Style="{StaticResource BodyLabel}" />

                <ListBox Grid.Row="1"
                         Grid.ColumnSpan="2"
                         HorizontalContentAlignment="Stretch"
                         d:ItemsSource="{d:SampleData ItemCount=5}"
                         ItemsSource="{Binding PagedParticipants}"
                         SelectedItem="{Binding SelectedParticipant}"
                         SelectionMode="Single"
                         Style="{StaticResource ListBoxStyle}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Participant Name  -->
                                <TextBlock VerticalAlignment="Center" Text="{Binding Name}" />

                                <!--  Toggle Done  -->
                                <CheckBox Grid.Column="1"
                                          VerticalAlignment="Center"
                                          IsChecked="{Binding Done, Mode=TwoWay}"
                                          Style="{StaticResource CheckBoxStyle}" />

                                <!--  Delete Action  -->
                                <Button Grid.Column="2"
                                        Width="25"
                                        Height="25"
                                        Margin="5,0,0,0"
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Delete">
                                    <Image Source="pack://application:,,,/Assets/delete_icon.png" Stretch="Uniform" />
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <GroupBox Grid.RowSpan="2"
                          Grid.Column="2"
                          Header="Ajouter / Éditer"
                          Style="{StaticResource GroupBoxStyle}">
                    <StackPanel>
                        <TextBlock FontWeight="Bold" Text="Nom :" />
                        <TextBox Width="300" Style="{StaticResource TextBoxStyle}" />
                        <TextBlock Margin="0,10,0,0"
                                   FontWeight="Bold"
                                   Text="Description :" />
                        <TextBox Width="300"
                                 Height="100"
                                 AcceptsReturn="True"
                                 Style="{StaticResource TextBoxStyle}" />
                    </StackPanel>
                </GroupBox>
            </Grid>
            <!--  Pagination Controls  -->
            <StackPanel Grid.Row="2"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding PageNumbers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Command="{Binding DataContext.GoToPageCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="{Binding}"
                                    Style="{StaticResource SecondaryButtonStyle}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
        <!--  Footer  -->
        <views:FooterControl Grid.Row="2">
            <views:FooterControl.FooterContent>
                <Label Margin="10"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"
                       Content="Footer Content"
                       Foreground="White"
                       Style="{StaticResource SecondaryTitleLabel}" />
            </views:FooterControl.FooterContent>
        </views:FooterControl>
        <!--  Popup Modal  -->
        <views:ModalPopupControl Title="Ajouter un participant"
                                 Grid.RowSpan="3"
                                 IsInputVisible="True"
                                 IsModal="True"
                                 IsPopupVisible="True"
                                 Message="Entrez le nom complet :?">
            <views:ModalPopupControl.Buttons>
                <Button Width="50"
                        Height="30"
                        Command="{Binding OKCommand}"
                        Content="OK"
                        Style="{StaticResource PrimaryButtonStyle}" />
                <Button Width="75"
                        Height="30"
                        Margin="0"
                        Command="{Binding CancelCommand}"
                        Content="Cancel"
                        Style="{StaticResource SecondaryButtonStyle}" />
            </views:ModalPopupControl.Buttons>
        </views:ModalPopupControl>
    </Grid>
</Window>