<Window x:Class="MainWindow" Title="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SpinTheWheel"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="800"
        Height="650"
        DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Subtle Button to Open Participants Manager  -->
        <Button Width="30"
                Height="30"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding OpenParticipantsManagerCommand}"
                Content="⚙"
                ToolTip="Open Participants Manager" />
        <!--  Wheel Placeholder  -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <!--  Roulette Wheel  -->
            <Canvas Width="400"
                    Height="400"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <!--  Dynamically Generated Segments  -->
                <ItemsControl ItemsSource="{Binding Segments}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Path Fill="{Binding Converter={StaticResource SegmentColorConverter}}"
                                  Stroke="Black"
                                  StrokeThickness="1">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="200,200">
                                                <LineSegment Point="200,0" />
                                                <ArcSegment IsLargeArc="{Binding IsLargeArc}"
                                                            Point="200,200"
                                                            Size="200,200" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                                <Path.RenderTransform>
                                    <RotateTransform Angle="{Binding}" CenterX="200" CenterY="200" />
                                </Path.RenderTransform>
                            </Path>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Outer Circle  -->
                <Ellipse Width="400"
                         Height="400"
                         Stroke="Black"
                         StrokeThickness="2" />

                <!--  Central Button  -->
                <Ellipse Canvas.Left="150"
                         Canvas.Top="150"
                         Width="100"
                         Height="100"
                         Fill="White"
                         Stroke="Black"
                         StrokeThickness="2" />
                <Button Canvas.Left="160"
                        Canvas.Top="160"
                        Width="80"
                        Height="80"
                        Command="{Binding SpinWheelCommand}"
                        Content="Spin"
                        IsEnabled="{Binding IsSpinning, Converter={StaticResource InverseBooleanConverter}}" />
            </Canvas>

        </Grid>
        <!--  Slider for Spin Duration  -->
        <StackPanel Grid.Row="1"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Text="Spin Duration (ms)" />
            <Slider Width="300"
                    IsSnapToTickEnabled="True"
                    Maximum="5000"
                    Minimum="1000"
                    TickFrequency="500"
                    Value="{Binding SpinDuration}" />
            <TextBlock HorizontalAlignment="Center" Text="{Binding SpinDuration}" />
        </StackPanel>
        <!--  Slider for Number of Segments  -->
        <StackPanel Grid.Row="2"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical">
            <TextBlock HorizontalAlignment="Center"
                       FontWeight="Bold"
                       Text="Number of Segments" />
            <Slider Width="300"
                    IsSnapToTickEnabled="True"
                    Maximum="12"
                    Minimum="2"
                    TickFrequency="2"
                    Value="{Binding NumberOfSegments}" />
            <TextBlock HorizontalAlignment="Center" Text="{Binding NumberOfSegments}" />
        </StackPanel>
        <!--  Selected Participant Display  -->
        <TextBlock Margin="0,0,0,50"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="Black"
                   Text="{Binding SelectedParticipant.Name}"
                   Visibility="{Binding SelectedParticipant, Converter={StaticResource NullToVisibilityConverter}}" />
    </Grid>
</Window>